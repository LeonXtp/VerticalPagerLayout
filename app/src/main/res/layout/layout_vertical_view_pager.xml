<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollParent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.leonxtp.verticalpagerlayout.LockableScrollView
        android:id="@+id/lockableScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.leonxtp.verticalpagerlayout.VerticalPagerLayout
            android:id="@+id/vertical_pager_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/id0"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#65bdda"
                android:gravity="center"
                android:text="0"
                android:textColor="@android:color/white"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/id1"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#cf4e6c"
                android:gravity="center"
                android:text="1"
                android:textColor="@android:color/white"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/id2"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#532520"
                android:gravity="center"
                android:text="2"
                android:textColor="@android:color/white"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/id3"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#98bdcf"
                android:gravity="center"
                android:text="3"
                android:textColor="@android:color/white"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/id4"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#cee9aa"
                android:gravity="center"
                android:text="4"
                android:textColor="@android:color/white"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/id5"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#e9d7aa"
                android:gravity="center"
                android:text="5"
                android:textColor="@android:color/white"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/id6"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#8c7ec6"
                android:gravity="center"
                android:text="6"
                android:textColor="@android:color/white"
                android:textSize="30sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/id7"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:background="#ff0000"
                    android:gravity="center"
                    android:text="7"
                    android:textColor="@android:color/white"
                    android:textSize="30sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/id8"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:background="#8c7ec6"
                android:gravity="center"
                android:text="8"
                android:textColor="@android:color/white"
                android:textSize="30sp" />

        </com.leonxtp.verticalpagerlayout.VerticalPagerLayout>

    </com.leonxtp.verticalpagerlayout.LockableScrollView>

</FrameLayout>